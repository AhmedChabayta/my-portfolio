{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "yarn build",
  "devCommand": "yarn dev",
  "outputDirectory": ".next",
  "git": {
    "productionBranch": "main"
  },
  "production": {
    "env": {
      "NEXT_PUBLIC_SITE_URL": "https://portfolio.example.com",
      "NEXT_PUBLIC_DEPLOYMENT_ENV": "production",
      "NEXT_PUBLIC_PRIMARY_COLOR": "blue",
      "NEXT_PUBLIC_DEFAULT_COLOR_SCHEME": "light",
      "NEXT_PUBLIC_ANALYTICS_ID": "UA-000000-1",
      "NEXT_PUBLIC_CMS_ENDPOINT": "https://cms.example.com/api"
    }
  },
  "preview": {
    "env": {
      "NEXT_PUBLIC_SITE_URL": "https://portfolio-staging.example.com",
      "NEXT_PUBLIC_DEPLOYMENT_ENV": "staging",
      "NEXT_PUBLIC_PRIMARY_COLOR": "grape",
      "NEXT_PUBLIC_DEFAULT_COLOR_SCHEME": "dark",
      "NEXT_PUBLIC_ANALYTICS_ID": "STAGING-XXXXXX",
      "NEXT_PUBLIC_CMS_ENDPOINT": "https://cms-staging.example.com/api"
    }
  }
}
